<?xml version='1.0' encoding='utf-8'?>
<widget id="com.ankur.knowYourMovie" version="1.0.0" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>KnowYourMovie</name>
    <description>
        Your personal movie recommender
    </description>
    <author email="ankur.101045@gmail.com" href="http://cordova.io">
        Ankur Sharma
    </author>
    <content src="index.html" />
    <plugin name="cordova-plugin-whitelist" spec="1" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <platform name="android">
        <allow-intent href="market:*" />
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
    </platform>
    <preference name="AndroidLaunchMode" value="singleTask" />
    <plugin name="cordova-plugin-inappbrowser" spec="^3.0.0" />
    <plugin name="cordova-plugin-safariviewcontroller" spec="^1.5.4" />
    <plugin name="cordova-plugin-customurlscheme" spec="^4.3.0">
        <variable name="URL_SCHEME" value="{com.ankur.knowYourMovie}" />
        <variable name="ANDROID_SCHEME" value="{com.ankur.knowYourMovie}" />
        <variable name="ANDROID_HOST" value="swiftapps.auth0.com" />
        <variable name="ANDROID_PATHPREFIX" value="/cordova/{com.ankur.knowYourMovie}/callback" />
    </plugin>
    <engine name="browser" spec="^5.0.4" />
    <engine name="android" spec="^7.1.4" />
</widget>
